# Environment Configuration
# Copy this to .env and update with your actual values

# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=conclusive_seo

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google APIs
GOOGLE_ANALYTICS_KEY=your_ga_key_here
GOOGLE_SEARCH_CONSOLE_KEY=your_gsc_key_here
GOOGLE_PAGESPEED_API_KEY=your_pagespeed_key_here

# Third-party SEO APIs
AHREFS_API_TOKEN=your_ahrefs_token_here
SEMRUSH_API_KEY=your_semrush_key_here
MOZ_ACCESS_ID=your_moz_access_id_here
MOZ_SECRET_KEY=your_moz_secret_key_here

# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=conclusive-seo-reports

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Crawler Configuration
MAX_CRAWL_DEPTH=10
MAX_PAGES_PER_CRAWL=100000
CRAWL_DELAY_MS=100
USER_AGENT=ConclusiveSEO/1.0 (+https://conclusive.digital)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=csv,xlsx,xml,txt
